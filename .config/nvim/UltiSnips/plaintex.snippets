#Begin 
snippet beg "begin{} / end{}" wbA
\begin{$1}
	$0
\end{$1}
endsnippet

#Make inline Math
snippet mk "Math" wA
$${1}$`!p
if t[2] and t[2][0] not in [',', '.', '?', '-', ' ']:
    snip.rv = ' '
else:
    snip.rv = ''
`$2
endsnippet

#Separate Math mode
snippet dm "Math" wA
\[
$1
\] $0
endsnippet

#Fraction snippet
snippet frac "Fraction"
\\frac{$1}{$2}$0
endsnippet

snippet compile.normal "Compile" bA 
\documentclass[$1]{$2}
\usepackage{hyperref}
\usepackage{amsthm}
\usepackage{amsmath}
\usepackage{graphicx}
\usepackage[T1]{fontenc}
\usepackage[italian]{babel}

\graphicspath{ {./images/} }

\hypersetup{
    linktoc=all,
    hidelinks
}
\theoremstyle{definition}

\title{$3}
\author{Daniel Pavalache}



\begin{document}
\maketitle
\tableofcontents

$0


\end{document}
endsnippet

snippet compile.main "Compile" bA 
