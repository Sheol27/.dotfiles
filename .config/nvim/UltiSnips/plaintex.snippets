\paragraph{$1}\mbox{}\\

$0
endsnippet

snippet sp "Subparagraph"
\subparagraph{$1}
$0
endsnippet

snippet def "Definition" b
\newtheorem*{$1}{$2}
\begin{$1}
$0
\end{$1}
endsnippet


snippet i "Italic" wA
\textit{$1}$0
endsnippet


snippet b "Bold" wA
\textbf{$1}$0
endsnippet

snippet ib "Italic and bold" wA
\textit{\textbf{$1}}$0
endsnippet

snippet u "Underline" wA
\underline{$1}$0
endsnippet

snippet ul "Unordered list" wA
\begin{itemize}
    \item $1

\end{itemize}
endsnippet

snippet nl "Numbered list" wA
\begin{enumerate}
    \item $1

\end{enumerate}
endsnippet

snippet it "Item" wA
\item $1
endsnippet


snippet sys "System of equations"
\begin{cases}
    $1 \\
    $0 \\

\end{cases}
endsnippet

snippet us "Unumbered section" wA
\addcontentsline{toc}{section}{$1}
\section*{$1}
$0
endsnippet

snippet skip "Skip line"
\bigskip

$0
endsnippet

snippet image "Image" w
\includegraphics[width=\textwidth]{$1}
endsnippet

snippet sub "Subfiles" 
\subfile{sections/$1/$1}
$0
endsnippet

snippet eq "Equation" 
\begin{equation}
$1
\end{equation}
$0
endsnippet
